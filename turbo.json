{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "postinstall": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "update:translations": {
      "outputs": ["public/locales/**"]
    },
    "build": {
      "dependsOn": ["//#build:packages", "^build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "//#build:packages": {
      "dependsOn": [],
      "outputs": ["packages/**/dist/**/*"]
    },
    "build:extension": {
      "dependsOn": ["//#build:packages"],
      "outputs": ["dist/**"]
    },
    "build:extension:ci": {
      "dependsOn": [
        "//#build:packages",
        "$SIMPLE_LOCALIZE_API_KEY",
        "$SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "$SENTRY_DSN",
        "$SENTRY_AUTH_TOKEN",
        "$POSTHOG_AUTH_TOKEN",
        "$BLOWFISH_BASE_PATH",
        "$BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:prod": {
      "dependsOn": [
        "//#build:packages",
        "$SIMPLE_LOCALIZE_API_KEY",
        "$SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "$SENTRY_DSN",
        "$SENTRY_AUTH_TOKEN",
        "$POSTHOG_AUTH_TOKEN",
        "$BLOWFISH_BASE_PATH",
        "$BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:canary": {
      "dependsOn": [
        "//#build:packages",
        "$SIMPLE_LOCALIZE_API_KEY",
        "$SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "$SENTRY_DSN",
        "$SENTRY_AUTH_TOKEN",
        "$POSTHOG_AUTH_TOKEN",
        "$BLOWFISH_BASE_PATH",
        "$BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": []
    },
    "test:watch": {
      "dependsOn": []
    }
  }
}
