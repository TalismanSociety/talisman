{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["//#build:packages", "^build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "//#build:packages": {
      "dependsOn": [],
      "outputs": ["packages/**/dist/**/*"]
    },
    "build:extension": {
      "dependsOn": ["//#build:packages"],
      "outputs": ["dist/**"]
    },
    "build:extension:firefox": {
      "dependsOn": ["//#build:packages"],
      "outputs": ["dist/**"]
    },
    "build:extension:ci": {
      "dependsOn": ["//#build:packages"],
      "env": [
        "POSTHOG_AUTH_TOKEN",
        "SIMPLE_LOCALIZE_API_KEY",
        "SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",
        "BLOWFISH_BASE_PATH",
        "BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:ci:firefox": {
      "dependsOn": ["//#build:packages"],
      "env": [
        "POSTHOG_AUTH_TOKEN",
        "SIMPLE_LOCALIZE_API_KEY",
        "SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",
        "BLOWFISH_BASE_PATH",
        "BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:canary": {
      "dependsOn": ["//#build:packages"],
      "env": [
        "POSTHOG_AUTH_TOKEN",
        "SIMPLE_LOCALIZE_API_KEY",
        "SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",
        "BLOWFISH_BASE_PATH",
        "BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:canary:firefox": {
      "dependsOn": ["//#build:packages"],
      "env": [
        "POSTHOG_AUTH_TOKEN",
        "SIMPLE_LOCALIZE_API_KEY",
        "SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",
        "BLOWFISH_BASE_PATH",
        "BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:prod": {
      "dependsOn": ["//#build:packages"],
      "env": [
        "POSTHOG_AUTH_TOKEN",
        "SIMPLE_LOCALIZE_API_KEY",
        "SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",
        "BLOWFISH_BASE_PATH",
        "BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:prod:firefox": {
      "dependsOn": ["//#build:packages"],
      "env": [
        "POSTHOG_AUTH_TOKEN",
        "SIMPLE_LOCALIZE_API_KEY",
        "SIMPLE_LOCALIZE_PROJECT_TOKEN",
        "SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",
        "BLOWFISH_BASE_PATH",
        "BLOWFISH_API_KEY"
      ],
      "outputs": ["dist/**"]
    }
  }
}
