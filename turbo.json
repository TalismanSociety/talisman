{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["//#build:packages", "^build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "//#build:packages": {
      "dependsOn": [],
      "outputs": ["packages/**/dist/**/*"]
    },
    "build:extension": {
      "dependsOn": ["//#build:packages"],
      "outputs": ["dist/**"]
    },
    "build:extension:ci": {
      "dependsOn": [
        "//#build:packages",
        "$SENTRY_DSN",
        "$SENTRY_AUTH_TOKEN",
        "$POSTHOG_AUTH_TOKEN"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:prod": {
      "dependsOn": [
        "//#build:packages",
        "$SENTRY_DSN",
        "$SENTRY_AUTH_TOKEN",
        "$POSTHOG_AUTH_TOKEN"
      ],
      "outputs": ["dist/**"]
    },
    "build:extension:canary": {
      "dependsOn": [
        "//#build:packages",
        "$SENTRY_DSN",
        "$SENTRY_AUTH_TOKEN",
        "$POSTHOG_AUTH_TOKEN"
      ],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": []
    },
    "test:watch": {
      "dependsOn": []
    }
  }
}
