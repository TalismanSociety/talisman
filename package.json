      "@substrate/txwrapper-substrate": "7.2.0",
      "@substrate/txwrapper-template": "7.2.0",
      "caniuse-lite": "1.0.30001642",
      "decode-uri-component": "0.2.1",
      "glob-parent": "^5.1.2",
      "semver": "~7.5.4"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,html,md,json}": "prettier --write",
    "*.{js,ts,jsx,tsx}": "eslint --fix --max-warnings 0"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
