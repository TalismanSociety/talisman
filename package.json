{
  "name": "talisman",
  "version": "0.0.0",
  "license": "GPL-3.0-or-later",
  "private": true,
  "workspaces": [
    "apps/*",
    "config/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,scss,html,md,json}\"",
    "postinstall": "preconstruct dev && yarn update:translations",
    "prepare": "husky install",
    "dev": "concurrently --prefix \"{name}\" --prefix-colors auto \"npm:dev:*\"",
    "dev:balances-demo": "yarn workspace balances-demo dev",
    "dev:extension": "yarn workspace extension dev",
    "dev:playground": "yarn workspace playground dev",
    "update:translations": "turbo run update:translations",
    "build": "turbo run build",
    "build:packages": "NODE_OPTIONS=--max_old_space_size=8192 preconstruct build",
    "build:extension": "turbo run build:extension",
    "build:extension:ci": "turbo run build:extension:ci",
    "build:extension:prod": "turbo run build:extension:prod",
    "build:extension:canary": "turbo run build:extension:canary",
    "lint": "turbo run lint",
    "clean": "turbo run clean --parallel && rm -rf dist && rm -rf node_modules",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e"
  },
  "devDependencies": {
    "@alectalisman/preconstruct-cli": "2.3.0-e",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@talismn/eslint-config": "workspace:*",
    "@testing-library/react": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "concurrently": "^7.6.0",
    "husky": "^8.0.3",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "ts-loader": "9.4.4",
    "turbo": "latest"
  },
  "resolutions": {
    "@polkadot/apps-config": "0.132.1",
