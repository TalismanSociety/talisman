{
  "name": "talisman",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "config/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,scss,html,md,json}\"",
    "postinstall": "preconstruct dev",
    "prepare": "husky install",
    "dev": "concurrently --prefix \"{name}\" --prefix-colors auto \"npm:dev:*\"",
    "dev:balances-demo": "yarn workspace balances-demo dev",
    "dev:extension": "yarn workspace extension dev",
    "dev:playground": "yarn workspace playground dev",
    "build": "turbo run build",
    "build:packages": "NODE_OPTIONS=--max_old_space_size=8192 preconstruct build",
    "build:extension:ci": "turbo run build:extension:ci",
    "build:extension:prod": "turbo run build:extension:prod",
    "build:extension:canary": "turbo run build:extension:canary",
    "lint": "turbo run lint",
    "clean": "turbo run clean --parallel && rm -rf dist && rm -rf node_modules",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@alectalisman/preconstruct-cli": "2.3.0-e",
    "@changesets/cli": "^2.26",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@talismn/eslint-config": "workspace:*",
    "@testing-library/react": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "concurrently": "^7.6.0",
    "husky": "^8.0.3",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.8.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "ts-loader": "9.3.0",
    "turbo": "latest"
  },
  "resolutions": {
    "@polkadot/apps-config": "0.124.1",
    "@polkadot/api-augment": "10.1.4",
    "@polkadot/api-base": "10.1.4",
    "@polkadot/api-contract": "10.1.4",
    "@polkadot/api-derive": "10.1.4",
    "@polkadot/api": "10.1.4",
