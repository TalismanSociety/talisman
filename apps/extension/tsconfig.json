{
  "extends": "@talismn/tsconfig/es6-react.json",
  "compilerOptions": {
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@talisman": ["./@talisman"],
      "@talisman/*": ["./@talisman/*"],
      "@core": ["./core"],
      "@core/*": ["./core/*"],
      "@ui": ["./ui"],
      "@ui/*": ["./ui/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next", ".turbo", ".dist"]
}
