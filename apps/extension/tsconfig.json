{
  "extends": "tsconfig/es6-react.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@talisman": ["./@talisman"],
      "@talisman/*": ["./@talisman/*"],
      "@core": ["./core"],
      "@core/*": ["./core/*"],
      "@ui": ["./ui"],
      "@ui/*": ["./ui/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"]
}
